ObjectHdrs fakeCMY$(SUFOBJ) : ../icc ../rspl ../gamut ../cgats ../spectro ../numlib
                              ../target ../plot ;
LinkLibraries fakeCMY : libxicc.lib ../icc/libicc.lib ../rspl/librspl.lib
                           ../gamut/libgamut.lib ../cgats/libcgats.lib 
